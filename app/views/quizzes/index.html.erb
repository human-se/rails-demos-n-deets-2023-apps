<h1>Quizzes</h1>

<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">

    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Creator</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @quizzes.each do |quiz| %>
        <tr>
          <td><%= quiz.title %></td>
          <td><%= quiz.description %></td>
          <td><%= quiz.creator.email %></td>
          <td class="text-nowrap">
            <%= link_to 'show', quiz_path(quiz), class: 'btn btn-sm btn-outline-primary' %>
            <% if quiz.creator == current_user %>
              <%= link_to 'edit', edit_quiz_path(quiz), class: 'btn btn-sm btn-outline-primary' %>
              <%= button_to 'destroy', quiz_path(quiz), method: :delete, data: { turbo: false }, class: 'btn btn-sm btn-outline-primary', form: { class: 'd-inline' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
  <%= link_to 'New Quiz', new_quiz_path, class: 'btn btn-primary' %>
</p>
