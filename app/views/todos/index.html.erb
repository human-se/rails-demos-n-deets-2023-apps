<h1>To-Do Items</h1>

<table class="table table-hover">

  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Due Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= link_to todo.title, todo_path(todo) %></td>
        <td><%= todo.due_date.strftime('%m/%d/%Y') %></td>
        <td><%= button_to 'Delete', todo_path(todo), method: :delete, data: { turbo: false }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>

</table>
