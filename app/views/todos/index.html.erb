<h1>To-Do Items</h1>

<table class="table table-hover">

  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Due Date</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.due_date.strftime('%m/%d/%Y') %></td>
      </tr>
    <% end %>
  </tbody>

</table>
